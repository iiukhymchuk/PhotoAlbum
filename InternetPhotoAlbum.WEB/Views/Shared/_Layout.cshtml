@using InternetPhotoAlbum.WEB.Models;
@model SharedLayoutViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Photo Album</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Photo Album", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>


            <div class="navbar-collapse collapse">
                @*
                    Чтобы можно было достать свойства пользователя используй следующие строчки
                *@
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("Index", "UserSpace", new { action = "Index", controller = "UserSpace", id = @Model.UserSpaceId })">
                                <span class="glyphicon glyphicon-camera"></span>
                                Мои картинки
                            </a>
                        </li>
                    </ul>
                }
                @{ Html.RenderPartial("_Search", @Model); }
                @{ Html.RenderPartial("_LoginPartial", @Model); }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Photo Album, Yevheniy Yukhymchuk</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
