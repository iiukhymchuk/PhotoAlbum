@model InternetPhotoAlbum.WEB.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<p class="text-success">@ViewBag.StatusMessage</p>

@if (@User.IsInRole("Admin"))
{
    @Html.ActionLink("Управление ролями - админка", "RoleIndex", "Account")
}

<div>
    <h3>Измените настройки учетной записи</h3>
    <hr />
    <div class="row">
        <div class="col-xs-4">
            <span>
                <b>Ваша картинка профиля</b>
            </span>
        </div>
        <div class="col-xs-4">
            <span>
                <text>Измените пароль или картинку профиля</text>
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4">
            <hr />
        </div>
        <div class="col-xs-4">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4">
            <div class="circle-mid-avatar-div">
                @if (Model.Avatar != null)
                {
                    Html.RenderPartial("_Avatar", @Model.Avatar);
                }
                else
                {
                    <text>Нет аватара</text>
                }
            </div>
        </div>
        <div class="col-xs-8">
            <dl class="dl-horizontal">
                <dt>Имя пользователя:</dt>
                <dd>
                    @Html.ActionLink("Изменить имя пользователя", "ChangeNickName")
                </dd>
                <dt>Пароль:</dt>
                <dd>
                    @Html.ActionLink("Изменить пароль", "ChangePassword")
                </dd>
                <dt>Аватар:</dt>
                <dd>
                    @Html.ActionLink("Изменить аватар", "SetAvatar")
                </dd>
            </dl>
        </div>
    </div>
</div>